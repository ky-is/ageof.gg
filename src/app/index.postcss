@tailwind base;

@tailwind components;

.smallcaps {
	font-variant: small-caps;
}

.text-secondary {
	@apply text-gray-500;
}
.border-secondary {
	@apply border-gray-500;
}

@tailwind utilities;

html, body, #app {
	@apply h-full;
}

.ui-button {
	@apply px-6 h-12 border-2 border-gray-900 rounded-full text-lg text-gray-900 font-medium outline-none;
}

.ui-select {
	@apply h-8 px-1 bg-transparent rounded border-2 border-gray-900 capitalize;
}
.ui-option {
	@apply bg-black;
}
